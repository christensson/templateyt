{
  "$schema": "https://json.schemastore.org/youtrack-app.json",
  "name": "templateyt",
  "title": "Ticket Templates",
  "version": "0.1.3",
  "description": "Add templates to tickets and articles, both automatically based on e.g. ticket type or tags, or manually using a UI.",
  "vendor": {
    "name": "Marcus Christensson",
    "url": "https://github.com/christensson/templateyt"
  },
  "changeNotes": "Version 0.1.3:<br/>- Fix workflow API Set iteration for self-hosted YT versions.",
  "minYouTrackVersion": "2024.3.0",
  "icon": "icon-small.svg",
  "widgets": [

    {
      "key": "templateyt-project-config",
      "name": "Ticket Templates Config",
      "indexPath": "templateyt-project-config/index.html",
      "extensionPoint": "PROJECT_SETTINGS",
      "iconPath": "icon-small.svg",
      "description": "Configure ticket templates for project.",
      "permissions": [
        "UPDATE_PROJECT"
      ]
    },
    {
      "key": "templateyt-article-menu",
      "name": "Configure as template",
      "indexPath": "templateyt-article-menu/index.html",
      "extensionPoint": "ARTICLE_OPTIONS_MENU_ITEM",
      "iconPath": "icon-small.svg",
      "description": "Configure article as ticket template.",
      "expectedDimensions": {
        "height": 300,
        "width": 480
      },
      "permissions": [
        "UPDATE_PROJECT"
      ]
    },
    {
      "key": "templateyt-issue-menu",
      "name": "Apply template",
      "indexPath": "templateyt-issue-menu/index.html",
      "extensionPoint": "ISSUE_OPTIONS_MENU_ITEM",
      "iconPath": "icon-small.svg",
      "description": "Apply a ticket template to the current ticket.",
      "expectedDimensions": {
        "height": 400,
        "width": 480
      },
      "permissions": [
        "UPDATE_ISSUE"
      ]
    },
    {
      "key": "templateyt-article-apply-template-menu",
      "name": "Apply template",
      "indexPath": "templateyt-article-apply-template-menu/index.html",
      "extensionPoint": "ARTICLE_OPTIONS_MENU_ITEM",
      "iconPath": "icon-small.svg",
      "description": "Apply a template to the current article.",
      "guard": "({entity}) => entity.extensionProperties?.isTemplate !== true",
      "expectedDimensions": {
        "width": 480,
        "height": 400
      },
      "permissions": [
        "UPDATE_ARTICLE"
      ]
    }
  ],
  "modules": {
    "workflows": [
      {
        "name": "Add template to ticket",
        "script": "add-issue-template-wf.js"
      },
      {
        "name": "Add template to article",
        "script": "add-article-template-wf.js"
      }
    ]
  }
}